<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    >

    <TextView
        android:id="@+id/Title1"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:gravity="center_horizontal"
        android:text="Penanda Muraja'ah"
        android:textAlignment="center"
        android:textStyle="bold"></TextView>

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="*"

        >
        <TableRow
            android:layout_height="wrap_content"
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"

            >
            <TextView
                android:text="MR"
                android:id="@+id/textViewA0"
                android:textStyle="bold"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="#FFFFFF"
                ></TextView>
            <TextView
                android:id="@+id/textViewA1"
                android:text="0"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="#FFFFFF"></TextView>

            <SeekBar
                android:id="@+id/seekbarTilawah1"
                android:layout_width="197dp"
                android:layout_height="25dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:background="@color/white" />

            <Button
                android:id="@+id/buttonTilawah1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="right"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:text="+"
                android:background="@color/cardview_dark_background"
                android:textColor="#ffffff" />

        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_marginBottom="3dp"
            >

            <TextView
                android:text="MR"
                android:id="@+id/textViewB0"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="#FFFFFF"></TextView>
            <TextView
                android:text="0"
                android:id="@+id/textViewB1"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="#FFFFFF"></TextView>
            <SeekBar
                android:id="@+id/seekbarTilawah2"
                android:layout_width="197dp"
                android:layout_height="25dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:background="@color/white" />

            <Button
                android:id="@+id/buttonTilawah2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="right"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:text="+"
                android:background="@color/cardview_dark_background"
                android:textColor="#ffffff" />

        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_marginBottom="3dp"

            >
            <TextView
                android:text="MR"
                android:id="@+id/textViewC0"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginBottom="1dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="#FFFFFF"></TextView>
            <TextView
                android:text="0"
                android:id="@+id/textViewC1"
