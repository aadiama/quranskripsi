<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:id="@+id/layoutMR"
    >

    <TextView
        android:id="@+id/Title1"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:gravity="center_horizontal"
        android:text="Penanda Muraja'ah"
        android:textAlignment="center"
        android:textStyle="bold"></TextView>

    <TableLayout
        android:id="@+id/tableLayoutMR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="*"

        >
        <TableRow
            android:layout_height="wrap_content"
            android:id="@+id/rowMR1"
            android:layout_width="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"

            >
            <TextView
                android:text="MR"
                android:id="@+id/textMR1"
                android:textStyle="bold"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="#FFFFFF"
                ></TextView>
            <TextView
                android:id="@+id/textPenandaMR1"
                android:text="0"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="#FFFFFF"></TextView>

            <ProgressBar
                android:id="@+id/progressbarMR1"
                style="?android:attr/progressBarStyleHorizontal"
                android:max="160"
                android:layout_width="197dp"
                android:layout_height="25dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:background="@color/white" />

            <Button
                android:id="@+id/buttonMR1Minus"
                android:onClick="minusPenandaMurajaah"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="right"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:text="-"
                android:background="@color/cardview_dark_background"
                android:textColor="#ffffff" />
            <Button
                android:id="@+id/buttonMR1"
                android:onClick="addPenandaMurajaah"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="right"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:text="+"
                android:background="@color/cardview_dark_background"
                android:textColor="#ffffff" />

        </TableRow>
    </TableLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"

        >

    </RelativeLayout>


    <Button
        android:id="@+id/buttonSaveMR"
        android:onClick="saveFunction"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_gravity="right"
        android:background="@color/colorPrimary"
        android:text="SIMPAN"
        android:textColor="@color/white" />


</LinearLayout>